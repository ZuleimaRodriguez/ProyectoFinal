        <DataGrid x:Name="dtGrid" HorizontalAlignment="Left" Margin="51,232,0,0" VerticalAlignment="Top" Height="122" Width="328" Grid.ColumnSpan="2"/>
        <Button Content="Mostrar todos" HorizontalAlignment="Left" Margin="343.776,261,0,0" VerticalAlignment="Top" Width="87" Grid.Column="1" Click="Button_Click_1"/>

